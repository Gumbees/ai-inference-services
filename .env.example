# Public domain configuration for external access via Traefik
WHISPER_PUBLIC_DOMAIN=whisper.yourdomain.com
OLLAMA_PUBLIC_DOMAIN=ollama.yourdomain.com
MEM0_PUBLIC_DOMAIN=mem0.yourdomain.com
MCP_PUBLIC_DOMAIN=mcp.yourdomain.com

# Private domain configuration for internal network access
WHISPER_PRIVATE_DOMAIN=whisper.local
OLLAMA_PRIVATE_DOMAIN=ollama.local

# PostgreSQL configuration
POSTGRES_DB=mem0
POSTGRES_USER=mem0
POSTGRES_PASSWORD=mem0_password

# LLM Provider Configuration (choose one)
# Option 1: OpenRouter (recommended for cost-effective access to multiple models)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_API_BASE=https://openrouter.ai/api/v1
LLM_MODEL=anthropic/claude-3-haiku
EMBEDDING_MODEL=text-embedding-3-small

# Option 2: Direct OpenAI (fallback)
OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_API_BASE=https://api.openai.com/v1  # Default, can be omitted

# Mem0 API Security
MEM0_API_KEY=gumbees-mem0-secret-key-change-in-production
MEM0_AUTH_ENABLED=true
MEM0_ADMIN_TOKEN=gumbees-admin-token-change-in-production

# MCP Server Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-key-change-this-in-production
NODE_ENV=production

# Web Configuration Interface
WEB_ENABLED=true
MCP_BASE_URL=https://mcp.yourdomain.com
ALLOWED_ORIGINS=https://mcp.yourdomain.com,http://localhost:3000

# OAuth/OpenID Connect Configuration (for Authentik integration)
OAUTH_ENABLED=true
OAUTH_ISSUER=https://auth.yourdomain.com/application/o/gumbees-mcp/
OAUTH_CLIENT_ID=your-authentik-client-id
OAUTH_CLIENT_SECRET=your-authentik-client-secret
OAUTH_SCOPE=openid profile email
OAUTH_CALLBACK_URL=/auth/callback

# Redis Configuration (for session storage)
REDIS_ENABLED=true
REDIS_URL=redis://redis:6379

# Security Configuration
MAX_REQUESTS_PER_SESSION=1000
SESSION_TIMEOUT_HOURS=24
ENABLE_AUDIT_LOGGING=true
SECURITY_LOG_LEVEL=warn

# Advanced mem0 Configuration (optional - can be configured via web interface)
# LLM Configuration
LLM_PROVIDER=openrouter
LLM_MODEL=anthropic/claude-3-haiku
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1000

# Embeddings Configuration
EMBEDDER_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Memory Management
MAX_MEMORIES_PER_USER=1000
MEMORY_RETENTION_DAYS=90
AUTO_DELETE_MEMORIES=false
SIMILARITY_THRESHOLD=0.7
ENABLE_DEDUPLICATION=true
ENABLE_CATEGORIZATION=true
AUTO_CATEGORIZATION=true

# Configuration Storage
CONFIG_PATH=/app/data/config.json

# Vector Store Configuration (for embeddings storage)
VECTOR_STORE_PROVIDER=postgres
VECTOR_STORE_HOST=postgresql
VECTOR_STORE_PORT=5432
VECTOR_STORE_DATABASE=mem0
VECTOR_STORE_USER=mem0
VECTOR_STORE_PASSWORD=mem0_password
VECTOR_STORE_TABLE=embeddings
VECTOR_STORE_COLLECTION=memories
VECTOR_STORE_SSL_MODE=prefer